<div>All users here </div>
<% if !@users.empty? %>
<ul class="users">
  <% @users.each do |user|
  user_avatar = user.profile.avatar.thumb%>
      <li>
        <%=image_tag(user_avatar) %>
        <%= link_to user.email, user %>
      </li>
  <% end %>
</ul>
<% else %>
<div>There are no users!</div>
<% end %>