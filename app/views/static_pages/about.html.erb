<script>
  $(document).on('turbolinks:load', function() {
    $('.parallax').on('scroll', function () {
      if ($(this).scrollTop() + $(this).innerHeight() >= $(this)[0].scrollHeight) {
        $("#go-to-catalog-box").show(500);
      }
    })
  });
</script>
