<script>
  var width = $(window).width();
  var diamondSize = 195;
  if (width > 1200){
    diamondSize = 195;
  }else if(width > 992){
    diamondSize = 180;
  }else if(width > 768){
    diamondSize = 160;
  }else if(width > 480){
    diamondSize = 140
  }else{
    diamondSize = 120;
  }

  $("#flickrItems").diamonds({
    size : diamondSize,
    gap : 2,
    hideIncompleteRow : false, // default: false
    autoRedraw : true, // default: true
    itemSelector : ".item"
  });
</script>

