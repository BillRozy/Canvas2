<script>
//    $('section').horizon();
    $(".scrollable-sections-container").bind('mousewheel', function(event) {
      if (event.originalEvent.wheelDelta >= 0) {
        $(".scrollable-section").first().toggleClass("active-section", true);
        $(".scrollable-section").last().toggleClass("active-section",false)
      }
      else {
        $(".scrollable-section").first().toggleClass("active-section", false);
        $(".scrollable-section").last().toggleClass("active-section",true)
      }
    });


$(document).ready(function () {

  $(".scrollable-sections-container").swipe({
    // Generic swipe handler for all directions.
    click: function (event, target) {
      alert('clicked');
      event.preventDefault();
      event.stopPropagation();
      event.stopImmediatePropagation();
    },
    swipe: function (event, direction, distance, duration, fingerCount) {
      if (direction === "right") {
        $(".scrollable-section").first().toggleClass("active-section", true);
        $(".scrollable-section").last().toggleClass("active-section",false)
      }else if(direction === "left"){
        $(".scrollable-section").first().toggleClass("active-section", false);
        $(".scrollable-section").last().toggleClass("active-section",true)
      }
    },
    threshold: 75
  });
});


</script>

