<div class = "event-wrapper">
    <div class = 'event-text-block'>
        <div class = 'event-title'>
            <h2><%= event.title %></h2>
        </div>
        <div class = 'event-summary'>
            <%= event.summary %>
        </div>
        <div class = 'event-link-to-full'>
            <%= link_to 'ЧИТАТЬ >>', event %>
        </div>
    </div>
    <div class = 'event-image-block'>
        <%= event.image %>
    </div>
    <div class = 'event-type-block'>
      <div style="width:110px;">Новость</div>
    </div>
</div>
