<div class='form-for-new-video' id = "add_new_video">
  <%= form_for @video, :html => {:multipart => true} do |f| %>
      <p>
        <label>Выбрать видео:</label>
        <label> Название</label>
        <%= f.text_field :title %>
        <%= f.label 'URL видео:' %>
        <%= f.text_field :path %>
        <%= f.hidden_field :category, value: @category %>
        <%= f.submit "Добавить видео", class: "btn btn-primary" %>
      </p>
  <% end %>
</div>