<%
  categories = []
  current_user.shootings.each do |s|
     categories << s.category
   end
  categories = ApplicationHelper.get_photo_categories - ['Все'] - categories
%>

<div class="add-shooting" id="add-shooting">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @shooting, :html => {:multipart => true}, :method => 'post' do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="register_field">
          <%= f.label 'Категория' %>
          <%= f.select :category, options_for_select(categories)%>
        </div>

        <div class="register_field">
          <%= f.label 'Цена' %>
          <%= f.text_field :price %>
        </div>
        <div class="register_field">
          <%= f.label 'Авторское описание' %>
          <%= f.text_area :description %>
        </div>
        <%= f.hidden_field :author_name, value: "#{current_user.profile.name} #{current_user.profile.surname}" %>
        <div class="register_field">
          <%= f.submit "Добавить", class: "btn btn-primary" %>
        </div>

    <% end %>
  </div>

</div>