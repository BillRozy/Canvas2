<header>
  <div class="header-section">
    <%= link_to "О нас", '/about', 'data-no-turbolink' => true %>
  </div>
  <div class="header-section">
    <a href="#">Контакты</a>
  </div>
  <%= link_to "", root_path, class: "header-section", id: 'logo' %>
  <div class=header-section>
    <%= link_to "Каталог", '/catalog','data-no-turbolink' => true %>
  </div>
  <div class="personal-cabinet header-section">
    <% if signed_in? %>
        <%= image_tag current_user.profile.avatar, class: "header-avatar", onerror:"this.style.display='none'" %>
        <%= link_to current_user.profile.name, current_user.profile, id: 'name_header_link' %>
        <div class="profile-block-header">
          <div id="profile-block-header-button" clicked="false" onclick="showMenu('profile-block-header-button','profile-block-header-menu')"></div>
        </div>
    <% else %>
        <%= link_to "Войти", '#login-form', 'data-rel': 'lightcase', remote: true %>
        <%= link_to "Регистрация", signup_path, id: 'sign_up_btn', remote: true %>
    <% end %>
    <div id="profile-block-header-menu" class="header-section">
      <% if signed_in? %>
          <%= link_to "Профиль", current_user.profile %>
          <% if current_user.operator? %>
              <%= link_to "Портфолио", current_user.portfolio %>
          <% end %>
      <% end %>
      <%= link_to "Выйти", signout_path, method: "delete" %>
    </div>
  </div>
</header>
<div class=zaglushka></div>
<div id="line-with-logo">
</div>
<div class="zaglushka zaglushka-add"></div>

<%= render 'shared/login_form' %>

