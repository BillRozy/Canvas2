<h1>Profile</h1>
<div class="registration-box">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @profile, :html => {:multipart => true} do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class = "register_field">
          <label>Аватар</label>
          <%= image_tag(@profile.avatar.thumb) if @profile.avatar? %>
          <%= f.file_field :avatar %>
          <%= f.hidden_field :avatar_cache %>
        </div>
        <div class = "register_field">
          <%= f.label 'Имя' %>
          <%= f.text_field :name %>
        </div>
        <div class = "register_field">
          <%= f.label 'Фамилия' %>
          <%= f.text_field :surname %>
        </div>
        <div class = "register_field">
          <%= f.label 'Пол' %>
          <%= f.text_field :sex %>
        </div>
        <div class = "register_field">
          <%= f.label 'Дата рождения' %>
          <%= f.date_select(:birthday, start_year: 1920, end_year: 2002, use_month_numbers: true) %>
        </div>
        <div class = "register_field">
          <%= f.label 'Город' %>
          <%= f.text_field :city %>
        </div>
        <div class = "register_field">
          <%= f.label 'Мобильный' %>
          <%= f.text_field :phone_number %>
        </div>
        <div class = "register_field">
          <%= f.label 'E-mail для связи' %>
          <%= f.text_field :social_email %>
        </div>
        <div class = "register_field">
          <%= f.label 'Соц сети' %>
          <%= f.text_field :social_network %>
        </div>
        <div class = "register_field">
          <%= f.label 'Хобби' %>
          <%= f.text_field :hobby %>
        </div>

        <div class = "register_field">
          <%= f.submit "Create my account", class: "btn btn-primary" %>
        </div>
    <% end %>
  </div>
</div>
