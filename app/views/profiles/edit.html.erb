
<div class="page-wrapper">
  <%= form_for @profile, :html => {:multipart => true} do |f| %>
  <div class="profile-box">
    <%= render 'shared/error_messages', object: f.object %>
    <div class="profile-box-header">
      <div class="profile-box-header-title">
        <%= f.text_field :name,required: true, placeholder: 'Имя' %><span>   </span><%= f.text_field :surname,required: true, placeholder: 'Фамилия' %>
      </div>
    </div>

    <div class="profile-box-body">
      <div class="profile-box-aside">
        <div class="profile-box-avatar">
          <%= image_tag(@profile.avatar) if @profile.avatar? %>
          <%= f.file_field :avatar, style: 'overflow: hidden;' %>
          <%= f.hidden_field :avatar_cache %>
        </div>
        <div class="profile-box-menu"></div>
      </div>
      <div class="profile-box-main-content">
        <div class='profile-box-field'>
          <div class='profile-box-field-title'>Пол:</div>
          <div class='profile-box-field-content'> <%= f.select :sex,  options_for_select([['Мужской'], ['Женский']]) %></div>
        </div>
        <div class='profile-box-field'>
          <div class='profile-box-field-title'>Дата рождения:</div>
          <div class='profile-box-field-content'><%= f.date_select(:birthday, start_year: 1920, end_year: 2002, use_month_numbers: true) %></div>
        </div>
        <div class='profile-box-field'>
          <div class='profile-box-field-title'>Город:</div>
          <div class='profile-box-field-content'><%= f.text_field :city, required: true %></div>
        </div>
        <div class='profile-box-field'>
          <div class='profile-box-field-title'>Телефон:</div>
          <div class='profile-box-field-content'><%= f.phone_field :phone_number %></div>
        </div>
        <div class='profile-box-field'>
          <div class='profile-box-field-title'>E-mail:</div>
          <div class='profile-box-field-content'><%= f.email_field :social_email %></div>
        </div>
        <div class='profile-box-field'>
          <div class='profile-box-field-title'>Соц сети:</div>
          <div class='profile-box-field-content'><%= f.text_field :social_network %></div>
        </div>
        <div class='profile-box-field'>
          <div class='profile-box-field-title'>О себе:</div>
          <div class='profile-box-field-content'><%= f.text_field :hobby %></div>
        </div>
        <%= f.submit "Сохранить", class: "simple_button button_150_50", style: 'margin-top:10px; margin-left:10px;' %>

      </div>
    </div>
  </div>
   <% end %>
</div>

