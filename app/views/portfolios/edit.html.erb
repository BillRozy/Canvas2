<% provide(:title, "Edit portfolio") %>
<h1>Update your portfolio</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@portfolio) do |f| %>

        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
        <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    <ul>
      <% @photos.each do |photo| %>
          <li>
            <%= photo.title %>
            <br>
            <%= image_tag photo.path %>
            <% if !current_user?(photo.user_id) %>
                <%= link_to "delete", photo_path, method: :delete,
                            data: { confirm: "You sure?" },
                            title: photo.title %>
            <% end %>
          </li>

      <% end %>
    </ul>


    <%= form_for @photo, :html => {:multipart => true} do |f| %>
        <p>
          <label>New Photo</label>
          <%= image_tag(@photo.path) if @photo.path != nil %>
          <%= f.file_field :image %>
          <%= f.hidden_field :image_cache %>
          <%= f.submit "Save new photo", class: "btn btn-primary" %>
        <% end %>
  </div>
</div>