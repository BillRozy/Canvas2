<div class="page-wrapper event-page-wrapper">
  <div class=full-event-wrapper>
    <div class="event-body-box">
      <div class = 'event-title'>
      <%= @event.title %>
      </div>
      <div class="event-body">
        <%= @event.body %>
      </div>
    </div>
    <div class="event-side-box">
      <div class="event-image-box">
        <%= image_tag @event.image, class: 'event-image autosize-img' %>
      </div>
      <div class="event-data-box">
        <div class="event-data-field">
          <div> Новость добавлена: </div>
          <div> <%= @event.created_at %></div>
        </div>
        <div class="event-data-field">
          <div> Новость изменена: </div>
          <div> <%= @event.updated_at %></div>
        </div>
      </div>
    </div>
  </div>
</div>
